<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/circuit_item_height"
    style="@style/cardItem">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/race_item_margin">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            style="@style/TextBlack.RaceTitle"
            android:textSize="@dimen/circuit_title_size"
            tools:text="Silverstone Circuit" />

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_country"
            android:layout_below="@id/tv_name"
            android:textSize="@dimen/circuit_country_size"
            tools:text="Great Britain" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_file_download_24"
            android:layout_alignStart="@id/tv_name"
            android:layout_below="@id/tv_country"
            android:layout_marginTop="@dimen/iv_download_margin_top"
            android:clickable="true"
            android:focusable="true"
            />

        <TextView
            android:id="@+id/tv_length_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_download"
            android:layout_below="@id/iv_download"
            android:layout_marginTop="@dimen/circuit_label_margin"
            style="@style/TextRaceItem"
            android:text="@string/circuit_length_label" />

        <TextView
            android:id="@+id/tv_length_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_download"
            android:layout_below="@id/tv_length_label"
            style="@style/TextBlack.RaceTitle"
            android:layout_marginTop="@dimen/circuit_data_margin"
            tools:text="5.891 KM" />

        <TextView
            android:id="@+id/tv_laps_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_length_label"
            android:layout_alignBaseline="@id/tv_length_label"
            android:layout_marginStart="@dimen/circuit_margin_left_label"
            android:layout_marginTop="@dimen/circuit_label_margin"
            style="@style/TextRaceItem"
            android:text="@string/laps_label" />

        <TextView
            android:id="@+id/tv_laps_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_laps_label"
            android:layout_below="@id/tv_laps_label"
            style="@style/TextBlack.RaceTitle"
            android:layout_marginTop="@dimen/circuit_data_margin"
            tools:text="52" />

        <TextView
            android:id="@+id/tv_first_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_laps_label"
            android:layout_marginStart="@dimen/circuit_margin_left_label"
            android:layout_marginTop="@dimen/circuit_label_margin"
            android:layout_alignBaseline="@id/tv_length_label"
            style="@style/TextRaceItem"
            android:text="@string/first_grand_prix_label" />

        <TextView
            android:id="@+id/tv_first_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_first_label"
            android:layout_below="@id/tv_first_label"
            style="@style/TextBlack.RaceTitle"
            android:layout_marginTop="@dimen/circuit_data_margin"
            tools:text="1950"/>

        <TextView
            android:id="@+id/tv_record_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_download"
            android:layout_below="@id/tv_laps_data"
            android:layout_marginTop="@dimen/circuit_label_margin"
            style="@style/TextRaceItem"
            android:text="@string/lap_record_label" />

        <TextView
            android:id="@+id/tv_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_record_label"
            android:layout_below="@id/tv_record_label"
            style="@style/TextBlack.RaceTitle"
            android:layout_marginTop="@dimen/circuit_data_margin"
            tools:text="1.27.097"/>

        <TextView
            android:id="@+id/tv_record_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_record_label"
            android:layout_below="@id/tv_record_time"
            android:layout_marginTop="@dimen/circuit_data_margin"
            android:textSize="@dimen/circuit_fl_driver_label"
            tools:text="Max Verstappen" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>