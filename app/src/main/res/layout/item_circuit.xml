<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/race_item_corner"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/race_item_margin">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:text="Silverstone Circuit" />

        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_country"
            android:layout_below="@id/tv_name"
            android:textSize="12sp"
            tools:text="Great Britain" />

        <ImageView
            android:id="@+id/iv_download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_file_download_24"
            android:layout_alignStart="@id/tv_name"
            android:layout_below="@id/tv_country"
            android:layout_marginTop="7dp"
            android:clickable="true"
            android:focusable="true"
            />

        <TextView
            android:id="@+id/tv_length_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_download"
            android:layout_below="@id/iv_download"
            android:layout_marginTop="15dp"
            style="@style/TextRaceItem"
            android:text="Circuit length" />

        <TextView
            android:id="@+id/tv_length_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_download"
            android:layout_below="@id/tv_length_label"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            tools:text="5.891 KM" />

        <TextView
            android:id="@+id/tv_laps_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_length_label"
            android:layout_alignBaseline="@id/tv_length_label"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            style="@style/TextRaceItem"
            android:text="Laps" />

        <TextView
            android:id="@+id/tv_laps_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_laps_label"
            android:layout_below="@id/tv_laps_label"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            tools:text="52" />

        <TextView
            android:id="@+id/tv_first_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tv_laps_label"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_alignBaseline="@id/tv_length_label"
            style="@style/TextRaceItem"
            android:text="First Grand Prix" />

        <TextView
            android:id="@+id/tv_first_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_first_label"
            android:layout_below="@id/tv_first_label"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            tools:text="1950"/>

        <TextView
            android:id="@+id/tv_record_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/iv_download"
            android:layout_below="@id/tv_laps_data"
            android:layout_marginTop="15dp"
            style="@style/TextRaceItem"
            android:text="Lap record" />

        <TextView
            android:id="@+id/tv_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_record_label"
            android:layout_below="@id/tv_record_label"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            tools:text="1.27.097"/>

        <TextView
            android:id="@+id/tv_record_driver"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/tv_record_label"
            android:layout_below="@id/tv_record_time"
            android:layout_marginTop="5dp"
            android:textSize="7sp"
            tools:text="Max Verstappen" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>