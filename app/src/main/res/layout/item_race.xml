<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="6dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/laps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="58 laps"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/racename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toEndOf="@id/laps"
            android:textColor="@color/black"
            android:textStyle="bold"
            tools:text="Great Britain" />

        <TextView android:id="@+id/iv_hotel_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/racename"
            android:layout_alignStart="@id/racename"
            tools:text="Lenovo Grand Prix 2022"
            android:textSize="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"/>

        <ImageView android:id="@+id/arrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"/>




    </RelativeLayout>

</androidx.cardview.widget.CardView>